<div class="content">
   <div class="container-fluid">
      <div class="row">
         <div class="col-lg-4 col-md-4 col-sm-4 ">
            <div class="item_balance red">
               <p>Total investment</p>
               <h5>{{user.total_invest}} USD </h5>
            </div>
            
         </div>
         <div class="col-md-4 col-sm-4">
            <div class="item_balance darkblue">
               <p>Active Investment</p>
               <h5>{{user.total_invest}} USD</h5>
            </div>
         </div>
         <div class="col-md-4 col-sm-4">
            <div class="item_balance peru">
               <p>Total Earned</p>
               <h5>{{user.total_earn}} USD</h5>
            </div>
         </div>
  
      </div>
      

      <div class="clearfix"></div>
        <div class="col-md-12" style="margin-top: 20px; ">
         <h3><strong>LAST 6 DAY'S CREDITED INTEREST</strong></h3>
        </div>

        <div class="col-md-12" style="background: linear-gradient(to right, #2c557d, #1b5065); border-radius: 10px; padding: 5px 0 20px 0;margin-bottom: 20px;">
           
            {{#each array_profit}} 
            <div class="col-md-2 col-xs-6 p-0" style="border-right: 1px solid #d0d0d0; margin-top: 20px">
               <div>
                  <p class="text-center f-s-15 text-white p-t-10" style="color: #fff;">{{this.date}}<i class="fa fa-calendar" aria-hidden="true" style="margin-left: 5px;"></i> </p>
                  <p class="text-center f-s-30" style="color: #fff;"><strong>{{this.percent}}
                  %</strong></p>
                  <p style="color: #fff;" class="text-center f-s-15 text-white"><i class="fa fa-check" aria-hidden="true"></i> Applied</p>
               </div>
            </div>
            {{/each}} 
           
          
          
         
           <div class="clearfix"></div>
        </div>


      <div class="row">
         <div class="col-md-12">
            <div class="card">
               <div class="content" id="your_investment">
                  
               </div>
               <!-- end content--> 
            </div>
            <!--  end card  --> 
         </div>
      </div>

      <div class="row">
         <div class="col-md-12">
            <div class="card">
               <div class="content" id="">
                  <h3 class="text-center" style="margin-bottom: 20px;">History Lending Wallet</h3>
                  <table id="login_history" class="table table-bordered table-hover" border="1" cellpadding="0" cellspacing="0"  style="border-collapse:collapse;">
                     <thead>
                        <tr>
                           <th>Date</th>
                           <th class="table-address">Type</th>
                           <th>Amount</th>
                           <th>Detail</th>
                        </tr>
                     </thead>
                     <tbody>
                        {{#each user.balance.lending_wallet.history}} 

                       
                       
                          <tr>
                             <td>{{prettifyDate this.date}} </td>

                            

                             <td>
                              {{#if_eq this.type 'received'}}
                                <span class="label label-success">{{this.type}}</span>  
                              {{else}}
                                <span class="label label-danger">{{this.type}}</span> 
                              {{/if_eq}}
                             </td>
                             <td>{{ this.amount}} USD</td>
                             <td>{{this.detail}}</td>
                          </tr>
                        
                        {{/each}} 
                     </tbody>
                  </table>
               </div>
            </div>
         </div>
      </div>
   
   </div>

   
</div>
<div class="content">
   <div class="container-fluid"> </div>
</div>