<div class="content">
   <div class="container-fluid">
      <div class="row">
        
         <div class="col-md-12">
            <div class="card">
               <div class="content">
                  <form action="/skfjdhsdkjfhsdkjfk/admin/ico/totalbuy" method="POST">
                  <label>Total Buy</label><br>
                  <input type="text" name="total" style="color: #000" value="{{total_ico.total}}" />
                  <input type="submit" name="OK" style="background: #000" />
               </form>


                  {{#if_eq total_ico.status '1'}}
                   <div class="col-md-12 text-center">
                     <a href="/skfjdhsdkjfhsdkjfk/admin/ico/endico">
                        <button class="btn btn-success">End Buy ICO</button>
                     </a>
                  </div>
                  {{/if_eq}} 
                  {{#if_eq total_ico.status '0'}}
                   <div class="col-md-12 text-center">
                     <a href="/skfjdhsdkjfhsdkjfk/admin/ico/startico">
                        <button class="btn btn-warning">Start Buy ICO</button>
                     </a>
                  </div>
                  {{/if_eq}} 
                  
                  <div class="material-datatables">
                     <table id="datatables" class="table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0">
                        <thead>
                           <tr>
                              <th>Username</th>
                              <th>Date</th>
                              <th>LEC Amount</th>
                              <th>Payment Amount</th>
                              <th>Action</th>
                           </tr>
                        </thead>
                        <tbody>
                           {{#each ico}} 
                           <tr>
                              <td>{{this.username}}</td>
                              <td>{{formatDate this.date "MM/DD/YYYY LT"}} </td>
                              <td >{{satoshi this.amount_coin}} LEC</td>
                              <td>{{satoshi this.amount_payment}} {{this.method_payment}}</td>
                              <td>
                              	<a href="/skfjdhsdkjfhsdkjfk/admin/ico/matched/{{this._id}}">
                              		<span class="label label-success" onclick="return confirm('Matching ???');">Matching Order</span>
                              	</a>
                              	<a href="/skfjdhsdkjfhsdkjfk/admin/ico/cancel/{{this._id}}">
									<span class="label label-warning" onclick="return confirm('Cancel ???');">Cancel Order</span>
                              	</a>
                              </td>
                           </tr>
                           {{/each}} 
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>