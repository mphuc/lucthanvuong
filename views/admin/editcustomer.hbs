<div class="content">
   <div class="container-fluid">
      <div class="row">
      <div class="col-md-12" style="padding: 15px;">
        <div class="card" >
          <h3 class="text-center">Investment</h3>
            <form method="post" action="/skfjdhsdkjfhsdkjfk/admin/InvestSubmit" class="form-horizontal">
               <fieldset>
                  <div class="form-group">
                     <label class="col-sm-2 control-label">Package</label>
                     <input type="hidden" value="{{users._id}}" name="uid" class="form-control">
                     <input type="hidden" value="{{users.displayName}}" name="displayName" class="form-control">
                     <div class="col-sm-10"> <input type="text" name="amount" class="form-control"> </div>
                  </div>
               </fieldset>
 
               <fieldset>
                  <div class="text-center"> <button type="submit" class="btn btn-rose btn-fill btn-wd">Investment</button> </div>
               </fieldset>
            </div>
         </form>
      </div>
            

      </div>

         <div class="col-md-12">
            <div class="card">
               <form method="post" action="/skfjdhsdkjfhsdkjfk/admin/updateUser" class="form-horizontal">
                  <div class="header card-header-text text-center">
                     <h4 class="title">Update User: <code> {{users.displayName}}</code></h4>
                  </div>
                  <div class="content">

                     <fieldset>
                        <div class="form-group">
                           <label class="col-sm-2 control-label">Password</label>
                           <input type="hidden" value="{{users._id}}" name="uid" class="form-control">
                           <div class="col-sm-10"> <input type="password" name="password" class="form-control"> </div>
                        </div>
                     </fieldset>
       
                     <fieldset>
                        <div class="text-center"> <button type="submit" class="btn btn-rose btn-fill btn-wd">Update</button> </div>
                     </fieldset>
                  </div>
               </form>
            </div>

              

            <div class="card">



            <div class="content">
            <table id="login_history" class="table table-bordered table-hover" border="1" cellpadding="0" cellspacing="0"  style="border-collapse:collapse;">
                     <thead>
                        <tr>
                           <th>Date</th>
                           <th class="table-address">Type</th>
                           <th>Amount</th>
                           <th>Detail</th>
                        </tr>
                     </thead>
                     <tbody>
                        {{#each users.balance.lending_wallet.history}} 

                       
                       
                          <tr>
                             <td>{{prettifyDate this.date}} </td>

                            

                             <td>
                             
                                <span class="label label-success">{{this.type}}</span>  
                              
                             </td>
                             <td>{{ this.amount}} USD</td>
                             <td>{{this.detail}}</td>
                          </tr>
                        
                        {{/each}} 
                     </tbody>
                  </table>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>